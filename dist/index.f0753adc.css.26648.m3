.section.sentence-section {
  padding: calc(var(--index) * 3);
  box-shadow: var(--default-boxshadow);
  background-image: url("sentences-bg.cc625e3b.webp");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  justify-content: center;
  align-items: center;
  height: 45svh;
  display: flex;
  position: relative;
  overflow: hidden;
}

.sentence-section .title-wrapper {
  padding: var(--padding-bigger);
  backdrop-filter: blur(1px);
  background-color: #fffc;
  max-width: 75%;
  position: absolute;
  top: 30%;
  left: 0;
}

@media (width <= 600px) {
  .sentence-section .title-wrapper {
    padding: var(--padding-smaller);
  }
}

.sentence-section .title {
  color: var(--color-accent-darkest);
  text-wrap: balance;
  font-style: italic;
  font-size: var(--font-size-smallscreens-title);
  letter-spacing: .1rem;
}

.sentence-section .quotation-mark-box {
  top: calc(var(--index) * -3);
  position: absolute;
  left: 5%;
}

.sentence-section .quotation-mark {
  font-size: calc(var(--index) * 8);
  color: var(--color-accent-darker);
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
  font-style: italic;
}
